{
  "compilerOptions": {
    "target": "ES2017",
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/components/ui/*": [
        "src/components/ui/shadcn/*"
      ],
      "@/components/ui/veep/*": [
        "src/components/ui/veep/*"
      ],
      "@/components/context/*": [
        "src/components/ui/shadcn/context/*"
      ],
      "@/components/plate-ui/*": [
        "src/components/plate-ui/*"
      ],
      "@/components/icons": [
        "src/components/ui/shadcn/plate-ui/icons.tsx"
      ],
      "@/lib/utils": [
        "src/components/ui/shadcn/utils"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/registry/*": [
        "src/components/ui/shadcn/registry/*"
      ],
      "@/config/*": [
        "src/components/ui/shadcn/config/*"
      ],
      "@/plate/*": [
        "src/components/ui/shadcn/lib/plate/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "dist/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
